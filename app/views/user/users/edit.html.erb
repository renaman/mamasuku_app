<%= form_for(@user, url: user_path(@user)) do |f| %>
	<%= f.label :name %><br />
	<%= f.text_field :name %><br /><%= f.label :image %>
	<%= f.attachment_field :profile_image %><br>
	<%= f.label :remove_profile_image %>
	<%= f.check_box :remove_profile_image %><br />
	<%= f.label :age %><br />
	<%= f.select :age, [["20代未満", "20代未満"], ["20代前半", "20代前半"], ["20代後半"], ["30代", "30代"], ["40代", "40代"], ["50代", "50代"], ["60代", "60代"]], include_blank: "選択してください" %><br />
	<%= f.label :introduction %><br />
	<%= f.text_area :introduction %>
	<%= f.submit 'Update' %>
<% end %>
