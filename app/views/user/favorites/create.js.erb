if (location.pathname == '/diaries' || location.pathname == '/search' || location.pathname.match("/users/[1-9]*")) {
	$(".diary_<%= @diary.id %>").html("<%= j(render 'user/diaries/favorite', diary: @diary, favorites: @diary.favorites) %>")
} else {
    $("#diary_<%= @diary.id %>").html("<%= j(render 'user/diaries/favorite', diary: @diary, favorites: @diary.favorites) %>")
}
//matchを使用することでlocation.pathnameと一致するかどうか真偽している
//１行目はdiariesのindexページまたはusersのshowページだった場合２行目が実行される