<% diary_comments.each do |diary_comment| %>
	<tr>
		<td>
			<%= link_to user_path(diary_comment.user) do %>
				<%= attachment_image_tag diary_comment.user, :profile_image, size: "45x40", fallback: "human.jpg" %>
				<%= diary_comment.user.name %>
			<% end %>
		</td>
		<td><%= diary_comment.comment %></td>
		<% unless current_user != diary_comment.user %>
		<td><%= link_to 'Destroy', diary_diary_comment_path(diary_id: @diary.id, diary_comment_id: diary_comment.id), method: :delete %></td>
		<% end %>
	</tr>
<% end %>