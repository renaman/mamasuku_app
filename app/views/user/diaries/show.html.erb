<div class="container main-container">
	<div class="row">
		<div class="col-md-4">
			<%= render 'user/users/profile', user: @user %>
		</div>
		<div class="col-md-8">
			<div class="title-head">
				Title:<%= @diary.title %>
			</div>
			<div class="image-content">
				<%= attachment_image_tag @diary, :image, :fill, 400, 300, format: 'jpg' %>
			</div>
			<div class="diary_content">
				<%= simple_format(@diary.body) %>
			</div>
			<div class="bottom-box">
				<%= link_to 'Edit', edit_diary_path(@diary) %><br>
				<span id="diary_<%= @diary.id %>">
					<%= render 'favorite', diary: @diary, favorites: @diary.favorites %>
				</span>
				<table class="show-tb comment_<%= @diary.id %>">
					<%= render 'comment', diary_comments: @diary.diary_comments %>
				</table>
				<%= form_with model:[@diary, @diary_comment], method: :post, data: {remote: true} do |f| %>
					<%= f.text_area :comment, placeholder: "コメントをここに", size: "80x5" %>
					<%= f.submit "Comment Up" %>
				<% end %>
			</div>
			</div>
		</div>
	</div>
</div>