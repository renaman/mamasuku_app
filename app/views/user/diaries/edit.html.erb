<div class="container">
	<div class="row">
		<div class="col-md-8 col-md-offset-3">
			<h2>Edit Diary</h2>

			<%= form_for(@diary, url: diary_path(@diary), method: :patch) do |f| %>
				<% if @diary.errors.any? %>
					<p id="error-message">
						<%= @diary.errors.count %>error prohibited this obj from being saved:<br>
						<% @diary.errors.full_messages.each do |message| %>
							<%= message %>
						<% end %>
					</p>
				<% end %><br>
				<%= f.label :title %><br>
				<%= f.text_field :title, class: "title-form", size: "50x5", placeholder: "20文字以内" %><br>
				<%= f.label :image %>
				<%= f.attachment_field :image %>
				<%= f.label :remove_image %>
				<%= f.check_box :remove_image %><br />
				<%= f.label :body %><br>
				<%= f.text_area :body, placeholder: '20文字以上500文字以内', class: "body-form", size: "80x20" %><br>
				<%= f.submit 'Update Diary', class: "btn btn-default glyphicon glyphicon-cog" %>
			<% end %>
		</div>
	</div>
</div>