<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-3">
<h2>New Diary</h2>

<%= form_for(@diary, url: diaries_path, method: :post) do |f| %>
	<%= f.label :title %><br>
	<%= f.text_field :title, size: "50x5" %><br>
	<%= f.label :image %>
	<%= f.attachment_field :image %><br>
	<%= f.label :body %><br>
	<%= f.text_area :body, size: "80x20" %><br>
	<%= f.submit 'Create Diary' %>
<% end %>
</div>
</div>
</div>