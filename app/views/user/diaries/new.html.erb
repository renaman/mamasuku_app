<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-3">
		<h2>New Diary</h2>

			<%= form_for(@diary, url: diaries_path, method: :post) do |f| %>
				<% if @diary.errors.any? %>
					<%= @diary.errors.count %>
						<% @diary.errors.full_messages.each do |message| %>
						<%= message %>
					<% end %>
				<% end %><br>
				<%= f.label :title %><br>
				<%= f.text_field :title, placeholder: '20文字以内', size: "50x5" %><br>
				<%= f.label :image %>
				<%= f.attachment_field :image %><br>
				<%= f.label :body %><br>
				<%= f.text_area :body, placeholder: '20文字以上500文字以内', size: "80x20" %><br>
				<%= f.submit 'Create Diary', class: "btn btn-default" %>
			<% end %>
	</div>
  </div>
</div>