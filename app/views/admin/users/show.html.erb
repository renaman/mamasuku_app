<div class="container">
	<div class="row">
		<div class="col-md-12">
			<table class="table">
				<tr>
					<td>ID</td>
					<td><%= @user.id %></td>
				</tr>
				<tr>
					<td>Name</td>
					<td><%= @user.name %></td>
				</tr>
				<tr>
					<td>Email</td>
					<td><%= @user.email %></td>
				</tr>
				<tr>
					<td>Address</td>
					<td><%= @user.postal_code %><br>
						<%= @user.prefecture_code %><%= @user.city %><%= @user.street %>
					</td>
				</tr>
				<tr>
					<td>Age</td>
					<td><%= @user.age %></td>
				</tr>
				<tr>
					<td>Status</td>
					<td><% if @user.is_active %>
							<span>有効会員</span>
						<% else %>
							<span>無効会員</span>
						<% end %>
					</td>
				</tr>
			</table>
			<%= link_to 'Edit', edit_admin_user_path(@user) %>
		</div>
	</div>
</div>
