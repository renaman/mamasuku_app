<div class="container main-container">
	<div class="row">
		<div class="col-md-12">
			<h2>User Index</h2>
			<table class="table">
				<thead>
					<th>ID</th>
					<th>Name</th>
					<th>Email</th>
					<th>Status</th>
					<th></th>
				</thead>
				<% @users.each do |user| %>
					<tbody>
						<tr>
							<td><%= user.id %></td>
							<td><%= link_to admin_user_path(user), class: "btn-link" do %>
									<%= user.name %>
								<% end %>
							</td>
							<td><%= user.email %></td>
							<td>
								<% if user.is_active %>
									有効
								<% else %>
									無効
								<%  end %>
							</td>
							<td><%= link_to 'User Diary', admin_user_diaries_path(user_id: user.id), class: "btn-link" %></td>
						</tr>
					</tbody>
				<% end %>
			</table>
			<div class="paging">
				<%= paginate @users %>
			</div>
		</div>
	</div>
</div>